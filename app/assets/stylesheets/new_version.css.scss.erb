/*
html elements
*/

@mixin full-radius($value: 4px) {
  border-radius: $value;
}
@mixin top-radius() {
  border-radius: 4px 4px 0 0;
}
@mixin bottom-radius() {
  border-radius: 0 0 4px 4px;
}
@mixin none-radius() {
 border-radius: 0; 
}
.fixed {
  position: fixed;
  width: 100%;
}
.gap {
