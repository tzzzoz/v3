<h1><%= @provider.name %></h1>

    <%= render 'show' %>
<div class="edit"> <%= link_to I18n.t('edit'), edit_admin_provider_path(:id => @provider.id), :target => '_blank', :id => 'edit_prov' if @provider.id %> </div>
<div class="delete"> <%= link_to I18n.t('delete'), admin_provider_path(:id => @provider.id), :method => :delete, :remote => true, :data => { :confirm => I18n.t('are_you_sure') } if @provider.id %> </div>
