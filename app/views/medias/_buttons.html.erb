<% med.providers_authorizations.each do |auth| %>
  <%= link_to image_tag("#{auth.label}.png", :title => I18n.t(auth.label)), downloads_path('ids[]' => med.id, :definition => auth.label), :class => auth.label, :target => :blank %>
<% end %>

<%= link_to image_tag("add.png", :title => I18n.t('add_to_lightbox')),
            light_box_image_path(:id, 'ids[]' => med.id),
            :method => :put,
            :class => 'add_to_lightbox',
            :remote => true %>
<%= link_to(image_tag('feature.png', :title => I18n.t('feature')), medias_path(:reportage => med.reportage, :anchor => med.id), :class => 'feature', :target => '_blank') unless med.reportage.blank? %>
